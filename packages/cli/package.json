{
  "name": "@codai/glass-cli",
  "version": "2.0.0",
  "description": "Command-line interface for GlassMCP - Machine Control Protocol CLI tool",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "glassmcp": "./dist/cli.js",
    "gmcp": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "dev": "tsx src/cli.ts"
  },
  "keywords": [
    "mcp",
    "machine-control-protocol",
    "windows",
    "automation",
    "cli",
    "typescript",
    "command-line"
  ],
  "author": "GlassMCP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/glassmcp/glass.git",
    "directory": "packages/cli"
  },
  "dependencies": {
    "@codai/glass-shared": "workspace:*",
    "@codai/glass-sdk": "workspace:*",
    "commander": "^11.1.0",
    "inquirer": "^9.2.12",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "figlet": "^1.7.0",
    "boxen": "^7.1.1",
    "conf": "^12.0.0"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "rimraf": "^5.0.5",
    "tsx": "^4.6.2"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
