{
  "name": "@codai/glass-sdk",
  "version": "2.0.0",
  "description": "TypeScript SDK for GlassMCP - Machine Control Protocol client library",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "keywords": [
    "mcp",
    "machine-control-protocol",
    "windows",
    "automation",
    "sdk",
    "typescript",
    "client"
  ],
  "author": "GlassMCP Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/glassmcp/glass.git",
    "directory": "packages/sdk"
  },
  "dependencies": {
    "@codai/glass-shared": "workspace:*",
    "axios": "^1.6.2",
    "ws": "^8.14.2",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@types/ws": "^8.5.10",
    "@types/node": "^20.11.5",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.4",
    "rimraf": "^5.0.5"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  }
}
